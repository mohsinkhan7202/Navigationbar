                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_toEndOf="@id/ivaboutManoj"
                android:layout_below="@id/tvgradManoj"
                android:layout_marginStart="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
