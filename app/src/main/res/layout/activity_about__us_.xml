                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_toEndOf="@id/ivaboutParimal"
                android:layout_below="@id/tvgradParimal"
                android:layout_marginStart="10dp"
                />

        </RelativeLayout>


    </LinearLayout>

    </LinearLayout>


</ScrollView>