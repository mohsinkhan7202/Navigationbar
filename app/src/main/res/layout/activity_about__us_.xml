            <TextView
                android:id="@+id/tvgradOly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B.Sc. in ETE, IIUC"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_toEndOf="@id/ivaboutOly"
                android:layout_below="@id/tvdegoly"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/tvmailOly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mahmudislamoly99@gmail.com"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_toEndOf="@id/ivaboutOly"
                android:layout_below="@id/tvgradOly"
                android:layout_marginStart="10dp"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/special_thanks_to"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
