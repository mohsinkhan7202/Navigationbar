<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".About_Us_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/programmers"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivaboutMohsin"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/mohsinimage"
                />

            <TextView
                android:id="@+id/tvnameMohsin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MD. Mohsin Khan"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/ivaboutMohsin"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/tvdegMohsin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Developer"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/ivaboutMohsin"
                android:layout_below="@+id/tvnameMohsin"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/tvgradMohsin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B.Sc. in ETE, IIUC"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_toEndOf="@id/ivaboutMohsin"
                android:layout_below="@id/tvdegMohsin"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/tvmailMohsin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mohsinkhan@gmail.com"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_toEndOf="@id/ivaboutMohsin"
                android:layout_below="@id/tvgradMohsin"
                android:layout_marginStart="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivaboutOly"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/olyimage"
                />

            <TextView
                android:id="@+id/tvnameOly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MD. Mahmudul Islam Oly"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/ivaboutOly"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/tvdegoly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
